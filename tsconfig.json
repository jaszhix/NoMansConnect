{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "allowJs": false,
    "resolveJsonModule": true,
    "declaration": false,
    "jsx": "react",
    "baseUrl": "./app",
    "typeRoots" : ["./types"],
    "lib": ["DOM"]
  },
  "include": [
    "app"
  ],
  "exclude": [
    "dll",
    "app/dist",
    "release",
    "resources"
  ]
}