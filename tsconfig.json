{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "module": "commonjs",
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": "app",
    "typeRoots" : ["./node_modules/@types", "./node_modules/csstype", "./types"],
  },
  "include": [
    "app"
  ],
  "exclude": [
    "app/dist",
    "release",
    "resources"
  ]
}